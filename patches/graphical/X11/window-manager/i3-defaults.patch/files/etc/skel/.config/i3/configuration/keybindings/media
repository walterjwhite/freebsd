bindsym XF86MonBrightnessDown exec xbacklight - 10
bindsym XF86MonBrightnessUp   exec xbacklight + 10

bindsym $mod+ctrl+Up exec volume-up
bindsym $mod+ctrl+Down exec volume-down
bindsym $mod+ctrl+M exec volume-mute
